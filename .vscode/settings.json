{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript][typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.showKeywords": false
  },
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "files.eol": "\r\n", // Utiliser CRLF (Windows) par d√©faut
  "[linux]": {
      "files.eol": "\n" // Utiliser LF (Linux) pour les environnements Linux
  },
  "javascript.validate.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true
  },
  "workbench.iconTheme": "material-icon-theme",
  "cSpell.words": [
    "airbnb"
  ]
}
